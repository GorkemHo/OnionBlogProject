@model UpdateAuthorDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Author Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Image:</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="Author Image" class="img-fluid"  width="600"/>
        </dd>

      
    </dl>
</div>
<div>
    @Html.ActionLink("Güncelle" , "Edit" , new { id = Model.Id} , new { @class = "btn btn-outline-warning" })
</div>

