@model IEnumerable<OnionBlogProject.Application.Models.Vms.PostVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
             
                <td>
                    @Html.ActionLink("Güncelle", "Update", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>